{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Libraries to include in the compilation
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit output files
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "commonjs", // Specify module code generation
    "moduleResolution": "node", // Specify module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure that each file can be safely transpiled independently
    "jsx": "preserve", // JSX code generation
    "incremental": true, // Enable incremental compilation
    "plugins": [
      {
        "name": "next" // Next.js specific plugin
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ] // Path mapping for module resolution
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ], // Files to include in the compilation
  "exclude": [
    "node_modules"
  ] // Directories to exclude from the compilation
}
